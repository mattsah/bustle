{
	"name": "inkwell/framework",
	"description": "The inKWell framework",
	"keywords": ["mvc", "framework", "application"],
	"license": "AGPL 3.0",
	"minimum-stability": "dev",
	"authors": [
		{
			"name":  "Matthew J. Sahagian",
			"email": "matt@imarc.net",
			"role":  "Lead Architect / Developer"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "http://packages.dotink.org"
		}
	],
	"require": {
		"php": ">=5.4.0",
		"filp/whoops": "1.*",
		"rdlowrey/auryn": "dev-master",
		"dotink/affinity": "dev-master",
		"dotink/inkwell-core": "dev-master",
		"dotink/inkwell-events": "dev-master",
		"dotink/inkwell-http": "dev-master",
		"dotink/inkwell-routing": "dev-master",
		"dotink/inkwell-controller": "dev-master",
		"dotink/inkwell-view": "dev-master",
		"dotink/inkwell-html": "dev-master",
	},
	"autoload": {
		"classmap": ["user/"]
	},
	"extra": {
		"opus": {
			"enabled": true
		}
	}
}
